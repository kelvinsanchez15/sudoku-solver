{
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:node/recommended",
    "plugin:mocha/recommended"
  ],
  "plugins": ["prettier", "mocha"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": ["chai", "jsdom"]
      }
    ],
    "mocha/no-mocha-arrows": "off"
  },
  "env": {
    "mocha": true,
    "browser": true
  }
}
